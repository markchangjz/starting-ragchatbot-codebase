{
  "permissions": {
    "allow": [
      "Bash(git commit:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "say 'All done'"
          }
        ]
      }
    ]
  }
}